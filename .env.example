# Copy this file to .env and fill in your actual credentials.
# Choose the API host you want to use by uncommenting one line and commenting out the others.
# API_HOST="azure"
# API_HOST="openai"
# API_HOST="github"

# --- OpenAI Configuration ---
# Required if API_HOST="openai"
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-4o" # Or specify another model like gpt-3.5-turbo

# --- Azure OpenAI Configuration ---
# Required if API_HOST="azure"
CHATBOT_UI_AZURE_OPENAI_ENDPOINT="your_azure_openai_endpoint_here"
CHATBOT_UI_AZURE_OPENAI_KEY="your_azure_openai_api_key_here"
CHATBOT_UI_AZURE_OPENAI_API_VERSION="your_azure_api_version_here" # e.g., 2024-05-01-preview
CHATBOT_UI_AZURE_DEPLOYMENT_NAME="your_azure_deployment_name_here" # e.g., gpt-4

# --- GitHub Models Configuration ---
# Required if API_HOST="github"
GITHUB_TOKEN="your_github_personal_access_token_here"
GITHUB_MODEL="gpt-4o" # Or specify another model available via GitHub Models

